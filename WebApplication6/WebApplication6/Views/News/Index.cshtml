
@model WebApplication6.Models.News
@{
    ViewBag.Title = "Home Page";
}
<style>
    .image{
        width:200px;
        height:100px;
    }
    .next {
        text-align: center;
    }
    .active {
        background-color: #d59829;
    }
</style>
<div class="container-fluid">
    <h2>Users Record</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New </button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Avatar
                </th>
                <th>
                    Title
                </th>
                <th>
                    Sapo
                </th>
                <th>
                    Description
                </th>
                <th>
                    CategoryId
                </th>
                <th>
                    CreateDate
                </th>
                <th>
                    ModifyDate
                </th>
                <th>
                    Active
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
    <div class="next">

    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
           
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                </div>
                <div class="modal-body">

                    <form>
                        
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "Id" })

                            @Html.LabelFor(model => model.Avatar)
                            @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control", @placeholder = "file", type = "file" })

                            @Html.LabelFor(model => model.Title)
                            @Html.TextAreaFor(model => model.Title, new { @class = "form-control", @placeholder = "Title" })

                            @Html.LabelFor(model => model.Sapo)
                            @Html.TextAreaFor(model => model.Sapo, new { @class = "form-control", @placeholder = "Sapo" })

                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })

                            <label for="Category">Loại tin tức</label>
                            <select class="form-control" id="CategoryId" name="CategoryId">
                            </select>

                            @Html.HiddenFor(model => model.CreateDate)

                            @Html.HiddenFor(model => model.ModifyDate)

                            <label for="Active">Trạng thái</label>
                            @Html.EditorFor(model => model.Active, new { @class = "form-control" })
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            
            </div>
    </div>
</div>
<script src="~/Scripts/News.js"></script>